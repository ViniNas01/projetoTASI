    <!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Cadastro - Cliente</title>
  <link rel="stylesheet" href="/STYLE/style.css" />
</head>
<body>
  <div class="container">
    <h1>Cadastrar Cliente</h1>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <form method="POST" action="/cadastro">
      <label>Nome</label>
      <input type="text" name="nome" value="<%= form.nome || '' %>" required />

      <label>Endereço</label>
      <input type="text" name="endereco" value="<%= form.endereco || '' %>" />

      <label>Telefone</label>
      <input type="text" name="telefone" value="<%= form.telefone || '' %>" required />

      <button type="submit">Cadastrar</button>
    </form>

    <p>Já tem conta? <a href="/login">Fazer login</a></p>
  </div>
</body>
</html>
